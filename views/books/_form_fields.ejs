<%# book.title, book.publishDate, author.name etc comes from the db's bzw. is setup by the model %>

<div> 
<label for="">Book</label>
<input type="text" name="title" value="<%= book.title %>" />
</div>

<div> 
<label for="">Author</label>
<select name="author">
<% authors.forEach(author => { %>
<% if(author.id === book.author) { %>
<option selected label="<%= author.name %>" value="<%= author.id %>">
<% } else { %>
<option label="<%= author.name %>" value="<%= author.id %>">
<% } %>
<% }) %>
</select></div>

<div>
<label for="">Publish Date</label>
<input type="date" name="publishDate" 
       value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" />

</div>

<div>
<label for="">Page Count</label>
<input type="number" name="pageCount" min="1"
       value="<%= book.pageCount %>" />

</div>

<div>
<label for="">Cover</label>
<input type="file" name="cover" />

</div>

<div>
<label for="">Description</label>
<textarea name="description"><% book.description %></textarea>

</div>